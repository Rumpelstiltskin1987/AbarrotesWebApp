@model Abarrotes.DataAccess.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

@* <h3>¿Está seguro que desea eliminar la Categoría?</h3> *@
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
